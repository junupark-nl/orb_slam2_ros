<launch>
    <node name="orb_slam2_mono" pkg="orb_slam2_ros" type="orb_slam2_ros_mono" output="screen">
        <remap from="/camera/image_raw" to="/camera/rgb/image_raw" />

        <!-- static parameters -->
        <param name="publish_map" type="bool" value="true" />
        <param name="publish_rendered_image" type="bool" value="true" />
        <param name="publish_pose" type="bool" value="true" />
        <param name="publish_tf" type="bool" value="false" />

        <param name="load_map" type="bool" value="false" />
        <param name="map_file_name" type="string" value="map.bin" />

        <param name="vocabulary_file_name" type="string" value="$(find orb_slam2_ros)/orb_slam2_core/Vocabulary/ORBvoc.txt" />

        <!-- ORB parameters -->
        <param name="ORB/nFeatures" type="int" value="2000" />
        <param name="ORB/scaleFactor" type="double" value="1.2" />
        <param name="ORB/nLevels" type="int" value="8" />
        <param name="ORB/iniThFAST" type="int" value="20" />
        <param name="ORB/minThFAST" type="int" value="7" />
        <!-- you don't need depth parameters for monocular case -->

        <!-- Camera parameters -->
        <!-- Camera calibration and distortion parameters (OpenCV) -->
        <param name="camera/fx" type="double" value="632.7927856445312" />
        <param name="camera/fy" type="double" value="626.8605346679688" />
        <param name="camera/cx" type="double" value="311.43603515625" />
        <param name="camera/cy" type="double" value="248.0950164794922" />
        <!-- Camera calibration and distortion parameters (OpenCV) -->
        <param name="camera/k1" type="double" value="-0.09097914397716522" />
        <param name="camera/k2" type="double" value="0.06503549218177795" />
        <param name="camera/p1" type="double" value="0.000849052332341671" />
        <param name="camera/p2" type="double" value="0.001785792293958366" />
        <param name="camera/k3" type="double" value="0.0" />

        <!-- Camera fps and rgb encoding(0: BGR, 1: RGB. It is ignored if images are grayscale) -->
        <param name="camera/fps" type="int" value="30" />
        <param name="camera/rgb_encoding" type="bool" value="true" />
    </node>
</launch>
